<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AddJob</servlet-name>
        <servlet-class>com.smk.AddJob</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>AddJob</servlet-name>
        <url-pattern>/AddJob</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteJob</servlet-name>
        <servlet-class>com.smk.DeleteJob</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>DeleteJob</servlet-name>
        <url-pattern>/DeleteJob</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>com.smk.CreateUser</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/CreateUser</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserLogins</servlet-name>
        <servlet-class>com.smk.UserLogins</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>UserLogins</servlet-name>
        <url-pattern>/UserLogin</url-pattern>
    </servlet-mapping>    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
